{
  "name": "rapide",
  "version": "0.1.1",
  "description": "web dev build tool",
  "author": "wkj",
  "license": "MIT",
  "keywords": [
    "rapide"
  ],
  "main": "index.js",
  "types": "types/index.d.ts",
  "bin": {
    "rapide": "index.js"
  },
  "files": [
    "types",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wkj9893/rapide.git"
  },
  "bugs": {
    "url": "https://github.com/wkj9893/rapide/issues"
  },
  "scripts": {
    "format": "prettier --write \"(client|server)/**/*.ts\"",
    "build-types": "rimraf types && tsc --declaration --emitDeclarationOnly --outDir types -p server",
    "watch":"esbuild index.ts --bundle --platform=node --outfile=index.js --external:esbuild --watch",
    "build-server": "rimraf dist && esbuild index.ts --bundle --minify --platform=node --outfile=index.js --external:esbuild",
    "build": "yarn build-types && yarn build-server"
  },
  "dependencies": {
    "esbuild": "^0.12.15"
  },
  "devDependencies": {
    "@types/node": "^16.3.2",
    "@types/ws": "^7.4.6",
    "chokidar": "^3.5.2",
    "cjs-module-lexer": "^1.2.1",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5",
    "ws": "^7.5.1"
  },
  "prettier": {
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
