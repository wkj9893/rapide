{
  "name": "rapide",
  "version": "0.0.2",
  "description": "web dev build tool",
  "author": "wkj",
  "license": "MIT",
  "keywords": [
    "rapide"
  ],
  "main": "index.js",
  "types": "types/index.d.ts",
  "bin": {
    "rapide": "bin/index.js"
  },
  "files": [
    "bin",
    "types",
    "index.js"
  ],
  "homepage": "https://github.com/wkj9893/rapide",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wkj9893/rapide.git"
  },
  "bugs": {
    "url": "https://github.com/wkj9893/rapide/issues"
  },
  "scripts": {
    "pre-dev": "rimraf cache && rimraf dist",
    "dev-client": "tsc -w --incremental -p client",
    "dev-server": "tsc -w --incremental -p server",
    "start-server": "yarn build-server && node dist/server/index.js",
    "format": "prettier --write \"(client|server)/**/*.ts\"",
    "build-types": "rimraf types && tsc --declaration --emitDeclarationOnly --outDir types -p server",
    "build-server": "rimraf dist && esbuild server/index.ts --bundle --minify --platform=node --outfile=index.js --external:esbuild",
    "build": "yarn build-types && yarn build-server",
    "release": "node scripts/release.js"
  },
  "dependencies": {
    "esbuild": "^0.12.15"
  },
  "devDependencies": {
    "@types/ws": "^7.4.6",
    "chokidar": "^3.5.2",
    "cjs-module-lexer": "^1.2.1",
    "prettier": "2.3.2",
    "prompts": "^2.4.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "typescript": "^4.3.5",
    "ws": "^7.5.1"
  },
  "prettier": {
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
