{
  "name": "rapide",
  "version": "0.2.0",
  "description": "web dev build tool",
  "author": "wkj",
  "license": "MIT",
  "keywords": [
    "rapide"
  ],
  "main": "index.js",
  "types": "types/index.d.ts",
  "bin": {
    "rapide": "index.js"
  },
  "files": [
    "types",
    "index.js",
    "client.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wkj9893/rapide.git"
  },
  "bugs": {
    "url": "https://github.com/wkj9893/rapide/issues"
  },
  "scripts": {
    "build-types": "rm -rf types && tsc --declaration --emitDeclarationOnly --outDir types -p server",
    "dev-client": "esbuild client/index.ts --bundle --format=esm --outfile=client.js --watch",
    "dev-server": "esbuild index.ts --bundle --platform=node --outfile=index.js --external:esbuild --watch",
    "build-client": "esbuild client/index.ts --bundle --minify --format=esm --outfile=client.js",
    "build-server": "rm -rf dist && esbuild index.ts --bundle --minify --platform=node --outfile=index.js --external:esbuild",
    "build": "pnpm build-types && pnpm build-server && pnpm build-client"
  },
  "dependencies": {
    "@babel/core": "^7.14.8",
    "esbuild": "^0.12.15",
    "react-refresh": "^0.10.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.15",
    "@types/node": "^16.3.3",
    "@types/ws": "^7.4.6",
    "chokidar": "^3.5.2",
    "cjs-module-lexer": "^1.2.2",
    "es-module-lexer": "^0.7.1",
    "typescript": "^4.3.5",
    "ws": "^7.5.1"
  }
}