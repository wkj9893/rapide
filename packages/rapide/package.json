  "license": "MIT",
  "keywords": [
    "rapide"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "rapide": "cli.js"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "client.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wkj9893/rapide.git"
  },
  "bugs": {
    "url": "https://github.com/wkj9893/rapide/issues"
  },
  "scripts": {
    "test": "afz",
    "dev-client": "esbuild client/index.ts --bundle --format=esm --outfile=client.js --watch",
    "dev-server": "esbuild index.ts --bundle --platform=node --outfile=index.js --external:esbuild --watch",
    "build-client": "esbuild client/index.ts --bundle --minify --format=esm --outfile=client.js",
    "build": "node scripts/build.js"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "esbuild": "^0.12.25",
    "ws": "^8.2.1"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "afz": "^0.1.3",
    "cjs-module-lexer": "^1.2.2",
    "es-module-lexer": "^0.7.1",
    "typescript": "^4.4.2"
  }
}